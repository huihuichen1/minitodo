.icon {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

/* 播放按钮 */
.play {
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 10px 0 10px 16px;
  margin-left: 4px;
}

/* 暂停按钮 */
.pause {
  width: 4px;
  height: 16px;
  position: relative;
}

.pause-bar {
  width: 4px;
  height: 16px;
  position: absolute;
  left: 8px;
}

/* 重置按钮 */
.reset {
  width: 16px;
  height: 16px;
  border-width: 2px;
  border-style: solid;
  border-radius: 50%;
  position: relative;
}

.reset-arrow {
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 4px 6px 4px 0;
  position: absolute;
  top: -4px;
  left: 2px;
}

/* 快进按钮 */
.forward {
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 8px 0 8px 12px;
  position: relative;
  margin-left: -1px;
}

.forward-arrow {
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 8px 0 8px 12px;
  position: absolute;
  left: 0;
  top: -8px;
} 
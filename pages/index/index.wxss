.timer-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 60px;
}

.timer-circle {
  width: 280px;
  height: 280px;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  box-shadow: 0 8px 20px rgba(255, 99, 71, 0.15);
}

.timer-circle::before {
  content: "";
  position: absolute;
  width: 250px;
  height: 250px;
  border-radius: 50%;
  background-color: white;
}

.timer-display {
  position: relative;
  z-index: 2;
  font-size: 80rpx;
  font-weight: 700;
}

.timer-label {
  margin-top: 20px;
  font-size: 32rpx;
  font-weight: 600;
  color: #ff6347;
}

.timer-controls {
  display: flex;
  justify-content: center;
  gap: 30px;
  margin-top: 40px;
}

.control-btn {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  background-color: #f5f5f7;
  color: #1d1d1f;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  transform: translateY(0);
}

.control-btn:active {
  transform: translateY(2px);
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.control-btn text {
  font-size: 24px; /* 调整表情符号大小 */
}

.control-btn.primary {
  background-color: #ff6347;
  color: white;
}

.mode-selector {
  display: flex;
  background-color: #f5f5f7;
  border-radius: 20px;
  padding: 5px;
  margin-top: 40px;
  width: 90%;
  max-width: 320px;
  align-self: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.mode-btn {
  flex: 1;
  padding: 12px 0;
  border-radius: 15px;
  font-size: 28rpx;
  font-weight: 600;
  color: #6e6e73;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.mode-btn.active {
  background-color: white;
  color: #1d1d1f;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

/* 对应模式活动时的颜色 */
.mode-btn[data-mode="专注"].active {
  color: #ff6347;
}

.mode-btn[data-mode="短休息"].active {
  color: #4CAF50;
}

.mode-btn[data-mode="长休息"].active {
  color: #2196F3;
}

.mode-btn:not(.active):hover {
  background-color: rgba(255, 255, 255, 0.5);
}

/* 图标字体 */
@font-face {
  font-family: "iconfont";
  src: url('data:font/woff2;charset=utf-8;base64,') format('woff2');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 24px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-play:before {
  content: "\e600";
}

.icon-pause:before {
  content: "\e601";
}

.icon-reset:before {
  content: "\e602";
}

.icon-forward:before {
  content: "\e603";
}

.container {
  padding-bottom: 60px; /* 为自定义导航栏留出空间 */
} 